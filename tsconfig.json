{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "pages": ["./pages"],
      "pages/*": ["./pages/*"],
      "actions/*": ["./actions/*"],
      "utilities": ["./utilities"],
      "models/*": ["./models/*"],
      "enums": ["./enums"],
      "elements": ["./elements"],
      "elements/*": ["./elements/*"]
    }
  },
  "globals": {
    "NODE_ENV": true
  }
}